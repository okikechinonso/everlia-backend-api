{
  "name": "everlia-backend-api",
  "version": "0.1.0",
  "description": "this is the server of dashter built with node, express, mongoose schema validation and use mongodb as a database",
  "main": "index.js",
  "scripts": {
    "local": "nodemon --watch src --exec \"tsc --noEmit && node --loader ts-node/esm src/api/index.ts\"",
    "start": "node ./build/api/index.js",
    "production": "NODE_ENV=production && tsc && node .build/api/index.js",
    "dev": "NODE_ENV=development && export NODE_OPTIONS=\"--max-old-space-size=4096\" && echo $NODE_OPTIONS && node -v && tsc && node .build/api/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "data:import": "node script/seed.js",
    "product": "node script/product.js",
    "build": "tsc"
  },
  "author": "kreench",
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@paypal/checkout-server-sdk": "^1.0.3",
    "@types/bcrypt": "^5.0.2",
    "axios": "^0.27.2",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.19.0",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dayjs": "^1.10.7",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^6.1.0",
    "helmet": "^5.0.2",
    "js-cookie": "^3.0.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.13.8",
    "mongoose-sequence": "^5.3.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.7.2",
    "socket.io": "^4.4.0",
    "stripe": "^9.14.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/hapi__joi": "^17.1.15",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mongoose-sequence": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "@types/pdfkit": "^0.13.9",
    "nodemon": "^2.0.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
